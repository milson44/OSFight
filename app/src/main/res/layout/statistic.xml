<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <Button
        android:id="@+id/buttonOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="@string/btn_statOS" />


    <Button
        android:id="@+id/buttonCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonOS"
        android:layout_alignLeft="@+id/buttonOS"
        android:layout_alignRight="@+id/buttonOS"
        android:layout_alignStart="@+id/buttonOS"
        android:layout_below="@+id/buttonOS"
        android:layout_marginTop="36dp"
        android:onClick="onClick"
        android:text="@string/btn_statCity" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imageView" />

    <Button
        android:id="@+id/buttonAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonCity"
        android:layout_alignLeft="@+id/buttonCity"
        android:layout_alignRight="@+id/buttonCity"
        android:layout_alignStart="@+id/buttonCity"
        android:layout_below="@+id/buttonCity"
        android:layout_marginTop="36dp"
        android:onClick="onClick"
        android:text="Возраст" />

</RelativeLayout>