<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/registrationText"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="РЕГИСТРАЦИЯ"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/registrationText"
        android:layout_gravity="right"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="имя"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/OK_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:text="OK"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/name_editText"
        android:layout_alignTop="@+id/name_editText"
        android:layout_gravity="left"
        android:layout_weight="0.15"
        android:text="Ваше имя:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_editText"
        android:text="Ваш возраст:"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cityText"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/ageText"
        android:layout_alignRight="@+id/ageText"
        android:layout_below="@+id/ageText"
        android:text="Ваш город:"
        android:inputType="textCapWords"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/age_editText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="возраст"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_below="@+id/name_editText"
        android:layout_alignLeft="@+id/name_editText"
        android:layout_alignStart="@+id/name_editText" />

    <EditText
        android:id="@+id/city_editText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="город"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_below="@+id/age_editText"
        android:layout_alignLeft="@+id/age_editText"
        android:layout_alignStart="@+id/age_editText" />

</RelativeLayout>